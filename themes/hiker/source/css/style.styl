@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-normal
  -webkit-text-size-adjust: 100%
  text-rendering: optimizelegibility;

::selection {
  background: color-theme
  color: #fff
}

.article-entry h2, .article-entry h3, .article-entry h4, .article-entry h5, .article-entry h6
  color: color-theme

#rocket
    position: fixed;
    right: 50px;
    bottom: 60px;
    display: block;
    visibility: hidden;
    width: 33px;
    height: 70px;
    background: url(images/to_top.svg) no-repeat 50% 0;
    opacity: 0;
    -webkit-transition: visibility 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), opacity 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), -webkit-transform 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335);
    -moz-transition: visibility 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), opacity 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), -moz-transform 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335);
    transition: visibility 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), opacity 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335), transform 0.6s cubic-bezier(0.6, 0.04, 0.98, 0.335);
    @media mq-mobile
      right: 12px;
      bottom: 20px;
    @media mq-tablet
      right: 12px;
      bottom: 20px;
    #rocket i {
      display: block;
      margin-top: 48px;
      height: 14px;
      background: url(images/to_top.svg) no-repeat 50% -48px;
      opacity: .5;
      -webkit-transition: -webkit-transform .2s;
      -moz-transition: -moz-transform .2s;
      transition: transform .2s;
      -webkit-transform-origin: 50% 0;
      -moz-transform-origin: 50% 0;
      transform-origin: 50% 0; }
  #rocket.show {
    visibility: visible;
    opacity: 1; }
  #rocket.launch {
    opacity: 0;
    -webkit-transform: translateY(-500px);
    -moz-transform: translateY(-500px);
    -ms-transform: translateY(-500px);
    transform: translateY(-500px);
    pointer-events: none; }
    #rocket.launch i {
      -webkit-transform: scale(1.4, 3.2);
      -moz-transform: scale(1.4, 3.2);
      transform: scale(1.4, 3.2); }

#menu-switch
    display: block;
    position: fixed;
    right: 49px;
    bottom: 20px;
    padding: 0.2em 0 0.2em 0.2em;
    border: 1px solid #DDD;
    border-radius: 3px
    color: color-grey
    opacity: .6;
    @media mq-mobile
      display: none
    @media mq-tablet
      display: none
    &:hover
      background: #F3F3F3
      opacity: 1;


.toc-hide
  visibility: hidden !important
  opacity: 0 !important

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  width: 100%
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/header-post"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
